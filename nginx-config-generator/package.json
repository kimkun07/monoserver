{
  "name": "nginx-config-generator",
  "version": "1.0.0",
  "description": "Generates Nginx reverse proxy configurations from compose.yaml",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "generate": "tsx src/index.ts",
    "test": "tsx src/index.ts && cat ../nginx/conf.d/*.conf"
  },
  "keywords": [
    "nginx",
    "docker-compose",
    "reverse-proxy"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
